<%= form_with(model: article, local: true) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :user %>
    <% users_array = User.all.map { |user| [user.name, user.id] } %>
    <%= form.select(:user_id, :class =>".custom-select") do %>
    <%= options_for_select(users_array) %>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :subpage %>
    <% subpages_array = Subpage.all.map { |subpage| [subpage.link, subpage.id] } %>
    <%= form.select(:subpage_id) do %>
      <%= options_for_select(subpages_array) %>
    <% end %>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control mb-2" id="link" name="<%= controller %>[link]" placeholder="Link">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control mb-2" id="title" name="<%= controller %>[title]" placeholder="title">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control mb-2" id="heading" name="<%= controller %>[heading]" placeholder="Heading">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control mb-2" id="content" name="<%= controller %>[content]" placeholder="<div>raw</div> HTML content">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="image" name=<% controller %>[image]">
        <label class="image-label" for="image">Choose Photo</label>
      </div>
    </div>
  </div>
  <div class="field">
    <%= form.label :thumbimage %>
    <%= form.file_field :thumbimage %>
  </div>





  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
